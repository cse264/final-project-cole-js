doctype html
html
head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/leaderboard.css')
    link(rel='stylesheet', href='/stylesheets/recentlyJoined.css')
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap" rel="stylesheet")
    script(src='/javascripts/user.js')
body
    div.navbar
      button#home Home
      if !user_id
        button#signup Create an Account
        button#signin Sign In
      else
        button#signout Sign Out
        button#profile Profile
      button#leaderboard Leaderboard
      button#recentlyJoined Recently Joined
    div.recents
      h1 Recently Joined Players
      -for(var row in data)
            -data[row].date_created = data[row].date_created.toDateString() // convert raw date to cleaner format
            p(id=data[row].username)
                a(href='/users/'+data[row].username) #{data[row].username}
                br
                br
                | #{data[row].date_created}
            hr